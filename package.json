{
  "name": "@stoxy/stoxy",
  "version": "0.3.4",
  "description": "The reactive state management system equipped with Web Components.",
  "main": "index.js",
  "scripts": {
    "start": "wds --node-resolve --watch --open",
    "test": "web-test-runner \"test/**/*.test.js\" --node-resolve",
    "test-coverage": "web-test-runner \"test/**/*.test.js\" --node-resolve --coverage",
    "test-browser": "web-test-runner \"test/**/*.test.js\" --node-resolve --coverage --playwright --browsers chromium firefox webkit",
    "example:todo": "cd examples/todo-app && npm start",
    "example:userlist": "cd examples/user-list && npm start",
    "example:race-conditioning": "cd examples/race-conditioning && npm start"
  },
  "author": "Matsuuu <huhta.matias@gmail.com> (https://matsu.fi/)",
  "license": "ISC",
  "devDependencies": {
    "@esm-bundle/chai": "^4.3.4",
    "@simplr-wc/prettier-config": "^1.0.1",
    "@web/dev-server": "0.0.15",
    "@web/test-runner": "^0.12.19",
    "@web/test-runner-playwright": "^0.8.4"
  },
  "prettier": "@simplr-wc/prettier-config",
  "dependencies": {
    "@stoxy/core": "^0.3.3",
    "@stoxy/form": "^0.3.3",
    "@stoxy/object": "^0.3.3",
    "@stoxy/repeat": "^0.3.3",
    "@stoxy/string": "^0.3.3"
  }
